[Unit]
Description=Gerrit Start Script
After=syslog.target auditd.service network.target

[Service]
Type=simple
WorkingDirectory=<%= node['gerrit']['home'] %>/data
User=<%= node['gerrit']['user'] %>
ExecStart=/etc/alternatives/java <%= node['gerrit']['jvm_options'] %> -jar <%= node['gerrit']['home'] %>/gerrit.war <%= node['gerrit']['gerrit_args'] %>
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
